generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  age          Int
  coverImage   String
  gmail        String   @unique
  password     String
  phoneNumber  String
  location     String
  updatedAt    DateTime @updatedAt

  skills       Skill[]
  projects     Project[]
  aboutMe      AboutMe?
}

model Skill {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  percentage  Int
  userId      String?  @db.ObjectId
  user        User?    @relation(fields: [userId], references: [id])
}

model Project {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  title        String
  description  String
  techStack    String[]
  image        String
  liveDemo     String
  userId       String?  @db.ObjectId
  user         User?    @relation(fields: [userId], references: [id])
}

model AboutMe {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  title             String
  description       String
  techsUsed         String[]
  yearsOfExperience Int
  projectsCompleted Int
  clientsSatisfied  Int
  awardsReceived    Int

  userId            String   @unique @db.ObjectId
  user              User     @relation(fields: [userId], references: [id])
}
